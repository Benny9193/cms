# Database
# PostgreSQL (recommended for production)
DATABASE_URL="postgresql://user:password@localhost:5432/cms_db?schema=public"

# SQLite (alternative for local development)
# DATABASE_URL="file:./dev.db"

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Email (SMTP) - Optional for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yoursite.com

# Frontend URL (for password reset emails, etc.)
FRONTEND_URL=http://localhost:5173

# Redis (Optional - for caching, improves performance)
REDIS_URL=redis://localhost:6379

# Sentry (Optional - for error tracking in production)
SENTRY_DSN=https://your-sentry-dsn-here

# Rate Limiting (Optional - defaults are set in code)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
